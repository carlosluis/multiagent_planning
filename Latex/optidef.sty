% Adding constraints below "subject to" for multiple references
\DeclareDocumentCommand{\BelowAddConstraintMult}{m G{} G{}}{
	\iftoggle{bodyCon}{
		\bodyconstBelowMult{#1}{#2}{#3}
		\togglefalse{bodyCon}
	}{
		\equalsNothing{#3}{
			\equalsNothing{#2}{
				\defaultOCPConstraint\spanit\\&&&#1  #2
			}{
