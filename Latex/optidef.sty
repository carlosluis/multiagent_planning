{
	\ifthenelse{\isempty{#4}}
	{
		&\underset{\displaystyle #1}{\mathrm{#3}} \quad #2\span\span\span\span
	}
	{
		#4 ~ &\underset{\displaystyle #1}{\mathrm{#3}} \quad #2\span\span\span\span
	}
}

